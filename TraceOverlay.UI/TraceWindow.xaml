<Window x:Class="TraceOverlay.UI.TraceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TraceOverlay.UI"
        mc:Ignorable="d"
        Height="1040" Width="1920" WindowStyle="None" AllowsTransparency="True" ShowInTaskbar="False" Topmost="True" Background="{DynamicResource WindowBackground}">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBackground" Color="White" Opacity="0.05"/>
    </Window.Resources>
    <Grid>
        <StackPanel x:Name="splOverlay" HorizontalAlignment="Left" Height="900" VerticalAlignment="Top" Width="700" Margin="610,79,0,0"/>

    </Grid>
</Window>
